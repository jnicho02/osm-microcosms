<style>
  .details { color: #333; }
  .mic_row { display: flex }
  .mic_row > div { padding: 10px; }
  .when { color: #777; font-size: 120%; }
</style>

<div class="mic_row">
  <div>
    <div class="when">
      <%= l @event.moment, :format => :friendly %>
    </div>

    <h1 class="title">
      <%= @event.title %>
    </h1>
    <p>
      Hosted by <strong><%= @event.microcosm.name %></strong>
    </p>
    <p>
      Location: <strong><%= @event.location %></strong>
    </p>
  </div>
  <div>
    <p><%= @event.attendees.size %> people are going.</p>
    <p>Are you going?</p>
    <%= form_with scope: :event_attendance, url: event_attendance_index_path do |form| %>
      <%= form.hidden_field(:event_id, :value => @event.id) %>
      <%= form.hidden_field(:user_id, :value => current_user&.id) %>
      <%= form.submit :value => 'Yes' %>
      <%= form.submit :value => 'No' %>
    <% end %>
  </div>
</div>
<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>


