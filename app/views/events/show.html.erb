<style>
  .details { color: #333; }
  .mic_row { display: flex }
  .mic_row > div { padding: 10px; }
  .when { color: #555;  }
</style>

<div class="mic_row">
  <div>
    <div class="when">
      <%= l @event.moment, :format => :friendly %>
    </div>

    <h1 class="title">
      <%= @event.title %>
    </h1>
    <p>
      Hosted by <strong><%= @event.microcosm.name %></strong>
    </p>
    <p>
      Location: <strong><%= @event.location %></strong>
    </p>
  </div>
  <div>
    <p>Are you going?</p>
  </div>
</div>
<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>


